<div class='container'>
    
    {{!-- title and burger img --}}
    <div class='row d-flex justify-content-center'>
        <img style='height: 200px; width:200px;' src='http://clipart-library.com/image_gallery/149301.png'>
    </div>

    <div class='row d-flex justify-content-center'>
        <h1>Eat a Burger!</h1>
    </div>

    {{!-- Eat the burger button --}}
    <div class='row'>
        <div class='col-md-6'>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <p>
                            {{burger_name}}
                        </p>
                        <button class="change-eaten" data-id="{{id}}">
                            Consume the burger.
                        </button>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class='col-md-6'>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <p>
                            {{burger_name}}
                        </p>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    {{!-- Submit new burger form --}}
    <div>
        <form class="create-form">

            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="name">
            </div>

            <button type="submit">Add Burger</button>
    
        </form>
        <br>
        <p>Enter a burger you want to eat and click the "Add Burger" button.</p>
    </div>
</div>